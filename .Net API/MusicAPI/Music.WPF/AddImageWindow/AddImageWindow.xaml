<Window x:Class="Music.WPF.AddImageWindow.AddImageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Music.WPF.AddImageWindow"
        mc:Ignorable="d"
        Title="AddImageWindow" Height="500" Width="500">
    <DockPanel >
        <StackPanel VerticalAlignment="Bottom" x:Name="dropPanel" Width="400" Height="450" Background="Beige" Drop="DropPanel_Drop" AllowDrop="True" HorizontalAlignment="Center" Margin="0,0,0,36.5" >
            <Image Source="{Binding ImageDropped}" Width="400" Height="400"/>
            <Button Content="_Add" Click="AddImage_Event" VerticalAlignment="Bottom" Margin="20"/>
        </StackPanel>
    </DockPanel>
</Window>
